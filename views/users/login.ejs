<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
  <h1 class="col-6 offset-3">Login on TravelKaro</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3 mt-3">
        <lable for="username" class="form-lable">User Name</lable>
        <input
          name="username"
          class="form-control"
          id="username"
          required
          type="text"
        />
      </div>
      <div class="mb-3">
        <lable for="password" class="form-lable">Password</lable>
        <input
          name="password"
          class="form-control"
          id="password"
          required
          type="password"
        />
      </div>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>

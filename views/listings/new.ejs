<% layout('/layouts/boilerplate') -%>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
  </br>
    <form method="POST" class="needs-validation" novalidate action="/listings" enctype="multipart/form-data">
      <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
        <input name="listing[title]" class="form-control" required type="text" />
      </div>

      <div class="mb-3">
        <lable for="description" class="form-lable">Description</lable>
        <textarea name="listing[description]" class="form-control" required></textarea>
      </div> 

      <div class="mb-3">
        <lable for="image" class="form-lable">Upload Listing Image</lable>
        <input name="listing[image]" placeholder="Image url" class="form-control"
          type="file" />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-lable">Price</lable>
          <input name="listing[price]" type="string" class="form-control" required/>
        </div>
        
        <div class="mb-3 col-md-8">
          <lable for="country" class="form-lable">Country</lable>
          <input name="listing[country]" class="form-control" type="text" required/>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-lable">Location</lable>
        <input name="listing[location]" class="form-control" type="text" required/>
      </div>
      <button class="btn btn-dark mb-3 add-btn">Add</button>
    </form>
  </div>
</div>